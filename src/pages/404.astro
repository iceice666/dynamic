---
import BaseLayout from '$/layouts/BaseLayout.astro';
import { t } from '$/i18n';

const { locale } = Astro.locals;
---

<BaseLayout title={t(locale, 'page_404_title')}>
  <div class="flex min-h-[60vh] flex-col items-center justify-center gap-6 text-center">
    <div class="flex flex-col gap-3">
      <h1 class="text-accent m-0 text-8xl font-bold tabular-nums">
        {t(locale, 'page_404_heading')}
      </h1>
      <h2 class="text-foreground m-0 text-2xl font-semibold">
        {t(locale, 'page_404_title')}
      </h2>
      <p class="text-muted m-0 text-base">
        {t(locale, 'page_404_message')}
      </p>
    </div>
    <a
      href="/"
      class="bg-accent text-accent-fg inline-flex items-center gap-2 rounded-lg px-6 py-3 font-medium no-underline transition-opacity hover:opacity-90"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m12 19-7-7 7-7"></path>
        <path d="M19 12H5"></path>
      </svg>
      {t(locale, 'page_404_back_home')}
    </a>
  </div>
</BaseLayout>
