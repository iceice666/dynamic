---
import TOCWidget from '$/components/toc/TOCWidget.astro';

interface Props {
  headings?: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
---

{
  headings && headings.length > 0 && (
    <>
      <div id="toc-drawer-overlay" class="toc-drawer-overlay" />

      <div id="toc-drawer" class="toc-drawer">
        <div class="toc-drawer-header">
          <h2 class="text-sm font-medium">Table of Contents</h2>
          <button
            id="toc-drawer-close"
            class="text-muted hover:text-foreground p-2 transition-colors"
            aria-label="Close Table of Contents"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <line x1="18" y1="6" x2="6" y2="18" />
                <line x1="6" y1="6" x2="18" y2="18" />
              </>
            </svg>
          </button>
        </div>
        <div class="toc-drawer-content">
          <TOCWidget headings={headings} />
        </div>
      </div>
    </>
  )
}

<script>
  function setupTOCDrawer() {
    const fabBtn = document.getElementById('toc-fab-btn');
    const drawer = document.getElementById('toc-drawer');
    const overlay = document.getElementById('toc-drawer-overlay');
    const closeBtn = document.getElementById('toc-drawer-close');
    const tocLinks = drawer?.querySelectorAll('a');

    if (!fabBtn || !drawer || !overlay || !closeBtn) return;

    function openDrawer() {
      if (!drawer || !overlay) return;
      drawer.classList.add('open');
      overlay.classList.add('open');
    }

    function closeDrawer() {
      if (!drawer || !overlay) return;
      drawer.classList.remove('open');
      overlay.classList.remove('open');
    }

    fabBtn.addEventListener('click', openDrawer);
    closeBtn.addEventListener('click', closeDrawer);
    overlay.addEventListener('click', closeDrawer);

    // Close drawer when a link is clicked
    tocLinks?.forEach((link) => {
      link.addEventListener('click', closeDrawer);
    });
  }

  // Initialize on page load and after Astro page swaps
  setupTOCDrawer();
  document.addEventListener('astro:page-load', setupTOCDrawer);
</script>

<style>
  .toc-drawer-overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 40;
    backdrop-filter: blur(2px);
  }

  .toc-drawer-overlay.open {
    opacity: 1;
    pointer-events: auto;
  }

  .toc-drawer {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 280px;
    max-width: 85vw;
    background-color: var(--color-background);
    border-left: 1px solid var(--color-border);
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 50;
    display: flex;
    flex-direction: column;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
  }

  .toc-drawer.open {
    transform: translateX(0);
  }

  .toc-drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--color-border);
  }

  .toc-drawer-content {
    flex: 1;
    overflow-y: auto;
    padding: 1.25rem;
  }
</style>
